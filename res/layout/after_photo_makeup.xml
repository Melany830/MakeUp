<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-10dip"
        android:background="@color/main_makeup_color"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/settings"/>

    <ImageView
        android:id="@+id/settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:src="@drawable/ic_settings2" />
    
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="62dip"
        android:layout_above="@+id/lower"
        android:layout_gravity="center_horizontal" />

    <View
        android:id="@+id/lower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/share_button"
        android:layout_marginTop="-62dp"
        android:background="@color/main_makeup_color"
        android:layout_alignParentBottom="true"/>
    
    <ImageView
        android:id="@+id/share_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_share"/>

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="18dp"
        android:layout_height="23dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/share_button"
        android:layout_alignBottom="@+id/share_button"
        android:src="@drawable/ic_back"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/thrash_button"
        android:layout_width="18dp"
        android:layout_height="23dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/share_button"
        android:layout_alignBottom="@+id/share_button"
        android:src="@drawable/ic_trash"
        android:layout_marginRight="20dp"/>

</RelativeLayout>